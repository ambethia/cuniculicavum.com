<div class="section">

  <p>
    <b>Name:</b>
    <%=h @user.name %>
  </p>

  <p>
    <b>Email:</b>
    <%=h @user.email %>
  </p>

  <p><b>Characters:</b></p>
  
  <ul>
    <% for character in @user.characters %>
    <li><%= armory_link(character) %></li>
    <% end %>
  </ul>

  <%- if current_user.officer? -%>
  
  <p>
    <b>Open ID:</b>
    <%=h @user.identity_url %>
  </p>
  
  <p>
    <%= link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete %>
  </p>
  
  <%- end -%>
</div>