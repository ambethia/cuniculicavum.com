<div class="section">
  
  <h2>New Topic</h2>

  <% form_for(@topic) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :subject %><br />
      <%= f.text_field :subject %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "Create" %> <%= link_to "Cancel", topics_path %>
    </p>
  <% end %>

</div>